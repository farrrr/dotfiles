# settings for diff-so-fancy
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX -+W -+J
[color "diff-highlight"]
	oldNormal = red
	newNormal = green
	newHighlight = green 22
	oldHighlight = red 52
[color "diff"]
	meta = yellow
	frag = magenta
	commit = yellow
	old = red
	new = green
	whitespace = red reverse
[diff-so-fancy]
	useUnicodeRuler = false
	stripLeadingSymbols = false
